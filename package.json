{
  "name": "retro-floppy",
  "version": "1.0.0",
  "description": "Retro Floppy - A beautiful, interactive 3.5\" floppy disk React component for retro-themed UIs",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs"
    },
    "./dist/retro-floppy.css": "./dist/retro-floppy.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,md,css,yml,yaml,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,md,css,yml,yaml,json}\"",
    "type-check": "tsc --noEmit",
    "size": "size-limit",
    "prepublishOnly": "npm run build && npm run lint && npm run type-check && npm test",
    "prepare": "husky",
    "prepack": "npm run build",
    "logos:convert": "node scripts/convert-logos.js",
    "docs:install": "cd docs && npm install",
    "docs:dev": "cd docs && npm start",
    "docs:build": "npm run build && cd docs && npm run build",
    "docs:serve": "cd docs && npm run serve",
    "docs:deploy": "cd docs && npm run deploy"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "react",
    "component",
    "floppy-disk",
    "retro",
    "ui",
    "3.5-inch",
    "diskette",
    "nostalgia",
    "vintage",
    "90s",
    "interactive",
    "typescript",
    "accessible",
    "a11y",
    "css-modules",
    "animation"
  ],
  "author": "Cameron Rye <c@meron.io> (https://github.com/cameronrye)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cameronrye/floppydisk.git"
  },
  "bugs": {
    "url": "https://github.com/cameronrye/floppydisk/issues"
  },
  "homepage": "https://cameronrye.github.io/floppydisk",
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-v8": "^4.0.13",
    "@vitest/ui": "^4.0.13",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "rollup": "^4.53.3",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "sharp": "^0.34.5",
    "size-limit": "^11.2.0",
    "tslib": "^2.6.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13"
  },
  "size-limit": [
    {
      "name": "ESM Bundle",
      "path": "dist/index.esm.js",
      "limit": "15 KB"
    },
    {
      "name": "CJS Bundle",
      "path": "dist/index.cjs",
      "limit": "15 KB"
    },
    {
      "name": "CSS",
      "path": "dist/retro-floppy.css",
      "limit": "5 KB"
    }
  ]
}
